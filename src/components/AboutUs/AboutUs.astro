---
import { useTranslations } from "../../i18n/util";
import { languages } from "../../i18n/ui";
const currentLang = Astro.currentLocale || "es";
const translateLabels = useTranslations(currentLang as keyof typeof languages);
import "./AboutUs.css";
---

<section id="about-us">
  <div class="about-us-section-container">
    <div class="right-section scroll-animate">
      <h1 class="fade-in-up" data-delay="0">
        {translateLabels("aboutUs.title")}
        <span>{translateLabels("aboutUs.title.important")}</span>
      </h1>
      <p class="fade-in-up" data-delay="200">
        {translateLabels("aboutUs.description")}
      </p>
      <ul class="fade-in-up" data-delay="400">
        <li class="slide-in-left" data-delay="600">
          <figure>
            <img
              src="/assets/Icons/check.svg"
              alt={translateLabels("aboutUs.list.iconAlt")}
            />
          </figure>
          <p>{translateLabels("aboutUs.list.first")}</p>
        </li>
        <li class="slide-in-left" data-delay="700">
          <figure>
            <img
              src="/assets/Icons/check.svg"
              alt={translateLabels("aboutUs.list.iconAlt")}
            />
          </figure>
          <p>{translateLabels("aboutUs.list.second")}</p>
        </li>
        <li class="slide-in-left" data-delay="800">
          <figure>
            <img
              src="/assets/Icons/check.svg"
              alt={translateLabels("aboutUs.list.iconAlt")}
            />
          </figure>
          <p>{translateLabels("aboutUs.list.third")}</p>
        </li>
        <li class="slide-in-left" data-delay="900">
          <figure>
            <img
              src="/assets/Icons/check.svg"
              alt={translateLabels("aboutUs.list.iconAlt")}
            />
          </figure>
          <p>{translateLabels("aboutUs.list.four")}</p>
        </li>
        <li class="slide-in-left" data-delay="1000">
          <figure>
            <img
              src="/assets/Icons/check.svg"
              alt={translateLabels("aboutUs.list.iconAlt")}
            />
          </figure>
          <p>{translateLabels("aboutUs.list.fifth")}</p>
        </li>
      </ul>
    </div>
    <div class="left-section scroll-animate">
      <div class="bento-container">
        <div class="first-card scale-in" data-delay="200">
          <figure>
            <img
              src="/assets/images/first-image-card-about-us.webp"
              alt={translateLabels("aboutUs.bento.first.imageAlt")}
            />
          </figure>
        </div>
        <div class="second-card scale-in" data-delay="400">
          <figure class="image-container">
            <img
              src="/assets/images/second-image-card-about-us.webp"
              alt={translateLabels("aboutUs.bento.second.imageAlt")}
            />
          </figure>
          <div class="about-text-container">
            <figure class="icon-container">
              <img
                src="/assets/Icons/client.svg"
                alt={translateLabels("aboutUs.bento.client.imageAlt")}
              />
            </figure>
            <div>
              <h2>{translateLabels("aboutUs.bento.client.title")}</h2>
              <p>{translateLabels("aboutUs.bento.client.description")}</p>
            </div>
          </div>
        </div>
        <div class="third-card scale-in" data-delay="600">
          <figure class="image-container">
            <img
              src="/assets/images/second-image-card-about-us.webp"
              alt={translateLabels("aboutUs.bento.third.imageAlt")}
            />
          </figure>
          <div class="about-text-content">
            <figure class="icon-container">
              <img
                src="/assets/Icons/experience.svg"
                alt={translateLabels("aboutUs.bento.experiencie.imageAlt")}
              />
            </figure>
            <div>
              <h2>{translateLabels("aboutUs.bento.experience.title")}</h2>
              <p>{translateLabels("aboutUs.bento.experiencie.description")}</p>
            </div>
          </div>
        </div>
        <div class="four-card scale-in" data-delay="800">
          <figure>
            <img
              src="/assets/images/four-image-card-about-us.webp"
              alt={translateLabels("aboutUs.bento.four.imageAlt")}
            />
          </figure>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="./AboutUs.js"></script>
